<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingTop="@dimen/activity_toolbar_margin"
	android:background="@color/background">

	<TextView
		android:fontFamily="@font/mont_bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_marginTop="@dimen/margin_onboard_top"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:textColor="#FF000000"
		android:id="@+id/fr_quest_textHead"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		style="@style/HeadText"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Мы под берем занятия в зависимости от вашего опыта"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_below="@id/fr_quest_textHead"
		android:layout_marginTop="@dimen/margin_onboard_imgtop"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:layout_margin="20dp"
		android:id="@+id/fr_quest_bodytext"
		style="@style/justText"/>

	<ImageView
		android:id="@+id/fr_onboardImageView"
		android:src="@drawable/img_hum"
		android:layout_width="@dimen/img_onboard"
		android:layout_height="@dimen/img_onboard"
		android:layout_below="@id/fr_quest_bodytext"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="@dimen/margin_onboard_img2top"
		android:scaleType="fitCenter"/>

	<Button
		android:id="@+id/fr_onboardButton"
		android:text="@string/btn_next"
		android:layout_alignParentBottom="true"
		style="@style/BtnPrimary"
		android:layout_marginBottom="@dimen/margin_bottom_btn"/>

</RelativeLayout>

